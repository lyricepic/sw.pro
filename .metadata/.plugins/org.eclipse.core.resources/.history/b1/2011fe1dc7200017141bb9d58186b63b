package P0414;

import java.io.FileInputStream;
import java.util.Scanner;

public class A {
	
	static int n;
	static int a;
	static int b;
	static long[][] ps;
	
	public static void main(String[] args) throws Exception{
		
		System.setIn(new FileInputStream("test.txt"));
		Scanner sc = new Scanner(System.in);
		
		int T = sc.nextInt();
		int test_case;
		
		for(test_case = 1; test_case <= T; test_case++){
			// INPUT
			n = sc.nextInt();
			a = sc.nextInt();
			b = sc.nextInt();
			ps = new long[n+1][n+1];
			
			for(int i = 0; i <= n; i++){
				for(int j = 0; j <= n; j++){
					if(i == 0 || j == 0){
						ps[i][j] = 0;
					}else{
						if(j == 1 || i == j){
							ps[i][j] = 1;
						}else{
							ps[i][j] = ps[i-1][j-1] + ps[i-1][j];
						}
					}
				}
			}
			
			// SOLUTION
			long sum = 0;
			for(int i = a; i <= b; i++){
				sum += ps[n][i];
			}
			
			// OUT
			System.out.println("#" + test_case + " " + sum);
		}
	}
}
